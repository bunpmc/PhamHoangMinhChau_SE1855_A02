<Window x:Class="PhamHoangMinhChauWPF.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Portal" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Customer Portal" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Order History">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="94*"/>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="615*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListView Grid.Row="0" x:Name="lvOrder" Margin="0,0,0,5" SelectionMode="Single" Grid.ColumnSpan="4">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Order ID" Width="80" DisplayMemberBinding="{Binding OrderId}"/>
                                <GridViewColumn Header="Order Date" Width="100" DisplayMemberBinding="{Binding OrderDate, StringFormat=d}"/>
                                <GridViewColumn Header="Total Amount" Width="120" DisplayMemberBinding="{Binding TotalAmount, StringFormat=C}"/>
                                <GridViewColumn Header="Details" Width="120" DisplayMemberBinding="{Binding Details}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Update Profile">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Content="Customer ID:"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCustomerId" Margin="0,2,0,2" IsReadOnly="True"/>
                    <Label Grid.Row="1" Content="Company Name:"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtCompanyName" Margin="0,2,0,2"/>
                    <Label Grid.Row="2" Content="Contact Name:"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtContactName" Margin="0,2,0,2"/>
                    <Label Grid.Row="3" Content="Contact Title:"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtContactTitle" Margin="0,2,0,2"/>
                    <Label Grid.Row="4" Content="Address:"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtAddress" Margin="0,2,0,2"/>
                    <Label Grid.Row="5" Content="Phone:"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtPhone" Margin="0,2,0,2"/>
                    <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnUpdate" Content="Update Profile" Width="100" Margin="5" Click="SaveProfile_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnClose" Content="Close" Width="80" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
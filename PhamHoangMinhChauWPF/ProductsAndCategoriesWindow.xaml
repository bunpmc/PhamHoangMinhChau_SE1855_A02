<Window x:Class="PhamHoangMinhChauWPF.ProductsAndCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHoangMinhChauWPF"
        mc:Ignorable="d"
        Title="Products and Categories Management" Height="600" Width="1222">
    <Grid Margin="0,0,0,-215">
        <StackPanel Background="#FFF3E0">
            <Label Content="Products and Categories Management" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Padding="10"/>
        </StackPanel>
        <TreeView x:Name="tvCategory" Background="#E3F2FD" SelectedItemChanged="tvCategory_SelectedItemChanged" Margin="10,60,912,60" BorderThickness="1" BorderBrush="#B0BEC5">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </TreeView.Resources>
        </TreeView>
        <DockPanel Background="#ECEFF1" Margin="310,60,10,60">
            <ListView DockPanel.Dock="Top" x:Name="lvProduct" SelectionChanged="lvProduct_SelectionChanged" Height="250" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding ProductId}" Width="50"/>
                        <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding ProductName}" Width="150"/>
                        <GridViewColumn Header="Supplier Id" DisplayMemberBinding="{Binding SupplierId}" Width="80"/>
                        <GridViewColumn Header="Category Id" DisplayMemberBinding="{Binding CategoryId}" Width="80"/>
                        <GridViewColumn Header="Quantity/Unit" DisplayMemberBinding="{Binding QuantityPerUnit}" Width="100"/>
                        <GridViewColumn Header="Unit Price" DisplayMemberBinding="{Binding UnitPrice}" Width="80"/>
                        <GridViewColumn Header="In Stock" DisplayMemberBinding="{Binding UnitsInStock}" Width="80"/>
                        <GridViewColumn Header="On Order" DisplayMemberBinding="{Binding UnitsOnOrder}" Width="80"/>
                        <GridViewColumn Header="Reorder Level" DisplayMemberBinding="{Binding ReorderLevel}" Width="80"/>
                        <GridViewColumn Header="Discontinued" DisplayMemberBinding="{Binding Discontinued}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Background="#CFD8DC" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Label Content="Id" Grid.Row="0" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25" IsReadOnly="True"/>
                <Label Content="Product Name" Grid.Row="1" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" Margin="5,6,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Supplier Id" Grid.Row="2" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtSupplierId" Grid.Row="2" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Category Id" Grid.Row="3" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtCategoryId" Grid.Row="3" Grid.Column="1" Margin="5,7,5,6" TextWrapping="Wrap" Height="25"/>
                <Label Content="Quantity/Unit" Grid.Row="4" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtQuantityPerUnit" Grid.Row="4" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Unit Price" Grid.Row="5" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtPrice" Grid.Row="5" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Units In Stock" Grid.Row="6" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtQuantity" Grid.Row="6" Grid.Column="1" Margin="5,7,5,6" TextWrapping="Wrap" Height="25"/>
                <Label Content="Units On Order" Grid.Row="7" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtUnitsOnOrder" Grid.Row="7" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Reorder Level" Grid.Row="8" Grid.Column="0" FontSize="14" Margin="5,5,10,5"/>
                <TextBox x:Name="txtReorderLevel" Grid.Row="8" Grid.Column="1" Margin="5,7,5,7" TextWrapping="Wrap" Height="25"/>
                <Label Content="Discontinued" Grid.Row="9" Grid.Column="0" FontSize="14" Margin="5,5,10,5" Grid.RowSpan="2"/>
                <CheckBox x:Name="chkDiscontinued" Grid.Row="9" Grid.Column="1" Margin="5,13,5,0" VerticalAlignment="Top"/>
                <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="11" Orientation="Vertical" Margin="10,5,10,5">
                    <Button x:Name="btnClear" Content="Clear" FontSize="14" Margin="5" Padding="10,5" Click="btnClear_Click"/>
                    <Button x:Name="btnSave" Content="Save" FontSize="14" Margin="5" Padding="10,5" Click="btnSave_Click"/>
                    <Button x:Name="btnDelete" Content="Delete" FontSize="14" Margin="5" Padding="10,5" Click="btnDelete_Click"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
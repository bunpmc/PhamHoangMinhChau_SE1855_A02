<Window x:Class="PhamHoangMinhChauWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHoangMinhChauWPF"
        mc:Ignorable="d"
        Title="Lucy Sales Management System - Login" Height="478" Width="521"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="SimpleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005EA6"/>
        </Style>
        <Style x:Key="SimpleTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="SimplePasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Content="Lucy Sales Management System"
               FontSize="22" 
               FontWeight="Bold"
               FontFamily="Segoe UI"
               Foreground="#333333"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Margin="0,40,0,0"/>

        <Label Content="PRN212 Assignment 02"
               FontSize="14" 
               FontWeight="SemiBold"
               FontFamily="Segoe UI"
               Foreground="#555555"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Margin="0,80,0,0"/>

        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="300">

            <Label Content="Welcome!"
                   FontSize="18" 
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="#333333" HorizontalAlignment="Center"
                   />

            <Label Content="Username:" 
                   FontSize="14" 
                   FontFamily="Segoe UI"
                   Foreground="#333333"
                   HorizontalAlignment="Left"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource SimpleTextBoxStyle}"/>

            <Label Content="Password:" 
                   FontSize="14" 
                   FontFamily="Segoe UI"
                   Foreground="#333333"
                   HorizontalAlignment="Left"/>
            <PasswordBox x:Name="txtPassword" Style="{StaticResource SimplePasswordBoxStyle}"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSignin" Content="Sign In" 
                        Style="{StaticResource SimpleButtonStyle}" Width="71" Height="33" Click="btnSignin_Click"/>
                <Button x:Name="btnExit" Content="Exit" 
                        Style="{StaticResource SimpleButtonStyle}" Width="65" Height="31" Click="btnExit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
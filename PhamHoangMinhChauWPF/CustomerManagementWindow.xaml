<Window x:Class="PhamHoangMinhChauWPF.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHoangMinhChauWPF"
        mc:Ignorable="d"
        Title="Customer Management" Height="600" Width="942"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Customer Management" FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,10" HorizontalAlignment="Left"/>
        <ListView x:Name="lvCustomer" Grid.Row="1" Margin="0,0,0,10" 
                  BorderBrush="#CCCCCC" BorderThickness="1"
                  d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lvCustomer_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Customer ID" Width="100" 
                                   DisplayMemberBinding="{Binding CustomerId}"/>
                    <GridViewColumn Header="Company Name" Width="200" 
                                   DisplayMemberBinding="{Binding CompanyName}"/>
                    <GridViewColumn Header="Contact Name" Width="150" 
                                   DisplayMemberBinding="{Binding ContactName}"/>
                    <GridViewColumn Header="Contact Title" Width="150" 
                                   DisplayMemberBinding="{Binding ContactTitle}"/>
                    <GridViewColumn Header="Address" Width="200" 
                                   DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="Phone" Width="120" 
                                   DisplayMemberBinding="{Binding Phone}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Search by Customer ID:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtCustomerId_Search" Width="150" Style="{StaticResource TextBoxStyle}"/>
            <Button x:Name="btnSearch" Content="Search" Width="80" 
                    Style="{StaticResource ButtonStyle}" Click="btnSearch_Click"/>
        </StackPanel>
        <GroupBox Grid.Row="3" Header="Customer Information" FontWeight="Bold" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Customer ID:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCustomerId" Grid.Row="0" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <Label Content="Company Name:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtCompanyName" Grid.Row="1" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <Label Content="Contact Name:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtContactName" Grid.Row="2" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <Label Content="Contact Title:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtContactTitle" Grid.Row="3" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <Label Content="Address:" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtAddress" Grid.Row="4" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <Label Content="Phone:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPhone" Grid.Row="5" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"/>
                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnAdd" Content="Add" Width="80" 
                            Style="{StaticResource ButtonStyle}" Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Update" Width="80" 
                            Style="{StaticResource ButtonStyle}" Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Delete" Width="80" 
                            Style="{StaticResource ButtonStyle}" Click="btnDelete_Click"/>
                    <Button x:Name="btnClear" Content="Clear" Width="80" 
                            Style="{StaticResource ButtonStyle}" Click="btnClear_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
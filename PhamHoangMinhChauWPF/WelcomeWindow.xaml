<Window x:Class="PhamHoangMinhChauWPF.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHoangMinhChauWPF"
        mc:Ignorable="d"
        Title="Lucy Sales Management System - Welcome" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Window.Resources>
        <!-- Simple Button Style -->
        <Style x:Key="SimpleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005EA6"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Title Label -->
        <Label Content="Lucy Sales Management System"
               FontSize="22" 
               FontWeight="Bold"
               FontFamily="Segoe UI"
               Foreground="#333333"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Margin="0,40,0,0"/>

        <!-- Assignment Label -->
        <Label Content="PRN212 Assignment 02"
               FontSize="14" 
               FontWeight="SemiBold"
               FontFamily="Segoe UI"
               Foreground="#555555"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Margin="0,80,0,0"/>

        <!-- Welcome StackPanel -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="350">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnCustomerLogin" Content="Login As Customer" 
                        Style="{StaticResource SimpleButtonStyle}" />
                <Button x:Name="btnEmployeeLogin" Content="Login As Employee" 
                        Style="{StaticResource SimpleButtonStyle}" Click="btnEmployeeLogin_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>